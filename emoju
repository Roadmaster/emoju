args = ['juju']


for word in sys.argv[1:]:
    for emoji, meaning in substitutions.items():
        word = word.replace(emoji, meaning)
    args.append(word)

real_mode = os.environ.get("EMOJU_REAL", "") != ""

if real_mode:
    subprocess.call(args)
else:
    print(" ".join(args))
